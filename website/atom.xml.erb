---
title: example.com
feed_url: http://example.com/atom.xml
rss_length: 15
layout: nil
...
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

  {%
    posts = site.categories.blog.sort_by { |p| [-p.date.to_i, p.title] }.first(page.rss_length)
  %}

  <id>{{ domain }}/</id>
  <title>{{ title }}</title>
  <updated>{{ posts.first.date.iso8601 }}</updated>

  <author>
    <name>{{ author }}</name>
    <email>{{ email }}</email>
  </author>

  <link href="{{ feed_url }}" rel="self"/>
  <link href="{{ domain }}/"/>

  <rights> Â© {{ author }} - {{ email }} </rights>

  {% for post in posts %}
    <entry>
      <id>{{ domain }}{{ post.url }}</id>
      <title>{{ h post.title }}</title>
      <updated>{{ post.date.iso8601 }}</updated>

      <link rel="alternate" href="{{ domain }}{{ post.url }}"/>

      <published>{{ post.date.iso8601 }}</published>
      <content type="html">{{ h post.subrender }}</content>
    </entry>
  {% end %}
</feed>
